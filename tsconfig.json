{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "outDir": "build",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "*": ["src/*"]
    },
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "compileOnSave": true
}
